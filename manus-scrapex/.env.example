# Application
APP_NAME=manus-scrapex
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_SECRET_KEY=your-secret-key-change-this-in-production

# LLM Services
# DeepSeek (Primary)
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# OpenAI (Fallback)
OPENAI_API_KEY=your-openai-api-key

# Anthropic (Optional)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Database - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=scrapex
POSTGRES_PASSWORD=scrapex_password
POSTGRES_DB=scrapex_db

# Database - MongoDB
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=scrapex
MONGODB_PASSWORD=scrapex_password
MONGODB_DB=scrapex_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Proxy Services
# Example providers: BrightData, Oxylabs, Smartproxy
PROXY_SERVICE_ENABLED=false
PROXY_SERVICE_API_KEY=your-proxy-api-key
PROXY_SERVICE_URL=http://proxy-service.com

# Rotating Proxy Pool (comma-separated)
PROXY_LIST=

# CAPTCHA Solving
# 2Captcha / AntiCaptcha
CAPTCHA_SERVICE_ENABLED=false
CAPTCHA_SERVICE_API_KEY=your-captcha-api-key
CAPTCHA_SERVICE_URL=http://2captcha.com

# Monitoring
# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Prometheus
PROMETHEUS_PORT=9090

# Feature Flags
FEATURE_DEEPSEEK_PRIMARY=true
FEATURE_GPT4_FALLBACK=true
FEATURE_VISION_EXTRACTION=false
FEATURE_SELF_HEALING=true
FEATURE_BATCH_PROCESSING=true

# Performance
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
BROWSER_POOL_SIZE=10
CACHE_TTL=3600

# Scraping Limits
MAX_RETRIES=3
RETRY_DELAY=2
RATE_LIMIT_PER_DOMAIN=10

# ML Models
ML_MODEL_PATH=./models
DISPATCHER_MODEL=dispatcher_model.pkl
